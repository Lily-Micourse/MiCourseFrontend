{
  "presets": [
    "next/babel",
    "@zeit/next-typescript/babel"
  ],
  "plugins": [
    [
      "@babel/plugin-proposal-decorators",
      { "legacy": true }
    ],
    [
      "babel-plugin-root-import",
      {
        "paths": [{
          "rootPathPrefix": "~",
          "rootPathSuffix": "."
        }, {
          "rootPathPrefix": "@",
          "rootPathSuffix": "src"
        }]
      }
    ],
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": true,
        "preprocess": false
      }
    ]
  ]
}
